<Page x:Class="IntegradorP.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntegradorP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inicio">

    <Grid>
        <Viewbox Stretch="Fill">
            <Grid Width="800" Height="600">
                <Image Source="/Inicio.jPg" Stretch="Fill" Margin="-10,0,10,0"/>
                <Button x:Name="Cadastro" Content="Cadastro" Background="{x:Null}" BorderBrush="{x:Null}" Click="Cadastro_Click" Width="120" Height="38" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="222,469,0,0" Opacity="0"/>
                <Button x:Name="Login" Content="Login" BorderBrush="{x:Null}" Click="Login_Click" Width="121" Height="38" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="412,469,0,0" Opacity="0"/>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
