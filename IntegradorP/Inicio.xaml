<Page x:Class="IntegradorP.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntegradorP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inicio">

    <Grid>
        <Viewbox Stretch="Fill">
            <Grid Width="800" Height="600">
                <Image Source="/Inicio.jpg" Stretch="Fill" Margin="-10,0,10,0"/>
                <Image Source="/Inicio.jPg" Stretch="Fill" Margin="-10,0,10,0"/>
                <Button Content="Carrinho" 
    VerticalAlignment="Top" 
    Margin="224,468,0,0" 
    Width="114" 
    x:Name="Estoqe" 
    Height="40" 
    HorizontalAlignment="Left" 
    FontSize="26" 
    Foreground="White" 
    Click="Carrinho_Click" 
    BorderBrush="{x:Null}" 
    Background="Black" 
    FontFamily="Bold" 
    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Remover o efeito de pressionamento (azul no fundo) -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFFFFDF1" />
                                    <!-- Mantém o fundo original -->
                                </Trigger>
                                <!-- Remover o efeito de foco (azul ao ganhar foco) -->
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Background" Value="#FFFFFDF1" />
                                    <!-- Mantém o fundo original -->
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Comprar" VerticalAlignment="Top" Margin="415,468,0,0" Width="114" x:Name="Comprar" Height="40" HorizontalAlignment="Left" FontSize="26" Foreground="White" Click="Comprar_Click" BorderBrush="{x:Null}" Background="Black" FontFamily="Bold" FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Remover o efeito de pressionamento (azul no fundo) -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFFFFDF1" />
                                    <!-- Mantém o fundo original -->
                                </Trigger>
                                <!-- Remover o efeito de foco (azul ao ganhar foco) -->
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Background" Value="#FFFFFDF1" />
                                    <!-- Mantém o fundo original -->
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
